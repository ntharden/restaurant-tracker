<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>SEI Student Fun Facts</title>
    <% // Bootstrap CSS Framework %>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="stylesheets/style.css" />
  </head>
  <body>
    <header class="p-3 bg-dark text-white">
      <nav class="container">
        <div
          class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start"
        >
          <ul
            class="nav col-12 col-lg-auto me-lg-auto mb-2 mb-md-0 justify-content-center"
          >
            <li>
              <a href="" class="nav-link px-2 text-white">
                <h1 class="mb-0">SEI Student Fun Facts</h1>
              </a>
            </li>
          </ul>
          <form
            action="/profiles"
            method="GET"
            class="col-12 col-lg-auto mb-3 mb-lg-0 me-lg-3"
          >
            <input
              id="search"
              class="form-control form-control-dark"
              type="search"
              name="name"
              placeholder="Search name..."
              value="<%= name %>"
              autocomplete="off"
            />
          </form>
          <div class="text-end d-flex align-items-center"> 
            <% if (user) { %>
              <a href="/auth/logout">
                <button type="submit" class="btn btn-warning">Logout</button>
              </a>
            <% } else { %>
              <a href="/auth/google">
                <button type="submit" class="siwg">
                  <img id="siwg-image" src="" alt="Sign in with Google" />
                </button>
              </a>
            <% } %>
          </div>
        </div>
      </nav>
    </header>
    <div class="container">
      <h2 class="mt-3 mb-3">Students</h2>
      <% profiles.forEach(function(profile) { %>
        <div class="card mb-3 bg-dark text-white">
          <div class="row g-0">
            <div class="col-md-2">
              <% if (profile.avatar) { %>
                <img 
                  src="<%= profile.avatar %>" 
                  alt="<%= profile.name %> profile"
                  class="img-fluid rounded-start"
                />
              <% } else { %>
                <img 
                  src="/images/user.png" 
                  alt="placeholder avatar"
                  class="img-fluid rounded-start"
                >
              <% } %> 
            </div>
            <div class="col-md-10">
              <div class="card-body">
                <h3 class="card-title"><%= profile.name %></h3>
                <ul>
                  <% profile.facts.forEach(function(fact) { %>
                    <li class="card-text"><%= fact.text %></li>
                  <% }) %>
                </ul>
